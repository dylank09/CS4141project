public class driver {
    public static void main(String[] args) {
        
        System.out.println("Currently 3 sheets:     ~driver.display();"); 
        driver.display();
        
        System.out.println("\nLet's add 7 sheets using the \"add\" method:      ~driver.add();");
        System.out.println("Return: " + driver.add());
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.display();
        
        System.out.println("\nLet's rename the sheet in the first position to \"Title Sheet\"       ~driver.rename(\"Sheet1\", \"Title Sheet\")");
        System.out.println("Return: " + driver.rename("Sheet1", "Title Sheet"));
        driver.display();
        
        System.out.println("\nAnd let's rename \"Sheet5\" to \"Acquisitions\":      ~driver.rename(\"Sheet5\", \"Acquisitions\");");
        System.out.println("Return: " + driver.rename("Sheet5", "Acquisitions"));
        driver.display();
        
        System.out.println("\nNow let's move the sheet in index 3 to before the sheet at index 5:       ~driver.move(3, 5, true)");
        System.out.println("Return: " + driver.move(3, 5, true));
        driver.display();
        
        System.out.println("\nAnd now we'll move \"Acquisitions\" to the position after \"Sheet2\":     ~driver.move(\"Acquisitions\", \"Sheet2\", false)");
        System.out.println("Return: " + driver.move("Acquisitions", "Sheet2", false));
        driver.display();
        
        System.out.println("\nNow let's move the sheet at index 97 to after the sheet at index 4:       ~driver.move(97, 4, false)");
        System.out.println("Return: " + driver.move(97, 4, false) + "\nThis means that one of the indices doesn't conatain a sheet (97).");
        
        System.out.println("\nWe can try this with the overloaded version of move too:      ~driver.move(\"Immortality\", \"Title Sheet\", true)");
        System.out.println("Return: " + driver.move("Immortality", "Title Sheet", true));
        
        System.out.println("\nWe can remove sheets too:       driver.remove(\"Sheet7\")");
        System.out.println("Return: " + driver.remove("Sheet7"));
        driver.display();
        
        System.out.println("\nBut if we try to remove a sheet that doesn't exist, an error is returned:     ~driver.remove(827)");
        System.out.println("Return: " + driver.remove(827));
        
        System.out.println("\nWhat if you forget the name/position of a sheet?      ~driver.sheetName(7), driver.index(\"Sheet10\")");
        System.out.println("Return: " + driver.sheetName(7));
        System.out.println("Return: " + driver.index("Sheet10"));
        
        System.out.println("\nNow let's move \"Sheet4\" to the end of the list:      ~driver.moveToEnd(\"Sheet4\")");
        System.out.println("Return: " + driver.moveToEnd("Sheet4"));
        driver.display();
        
        System.out.println("\nNow let's move the sheet at index 1 to the end of the list:        ~driver.moveToEnd(1)");
        System.out.println("Return: " + driver.moveToEnd(1));
        driver.display();
        
        System.out.println("\nHow many sheets currently exist?      ~driver.length()");
        System.out.println("Return: " + driver.length());
    }
}
