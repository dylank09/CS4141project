public class driver {
    public static void main(String[] args) {
        
        System.out.println("Currently 3 sheets:"); 
        driver.display();
        
        System.out.println("\nLet's add 7 sheets using the \"add\" method:");
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.add();
        driver.display();
        
        System.out.println("\nLet's rename the sheet in the first position to \"Title Sheet\"");
        System.out.println(driver.rename("Sheet1", "Title Sheet"));
        driver.display();
        
        System.out.println("\nAnd let's rename \"Sheet5\" to \"Acquisitions\":");
        driver.rename("Sheet5", "Acquisitions");
        driver.display();
        
        System.out.println("\nIf we try to rename a sheet to an already existing name, -1 will be returned:");
        System.out.println(driver.rename(4, "Title Sheet"));
        
        System.out.println("\nNow let's move the sheet in index 3 to before the sheet at index 5");
        System.out.println(driver.move(3, 5, true));
        driver.display();
        
        System.out.println("\nAnd now we'll move \"Acquisitions\" to the position after \"Sheet2\":");
        System.out.println(driver.move("Acquisitions", "Sheet2", false));
        driver.display();
        
        System.out.println("\nNow let's move the sheet at index 97 to after the sheet at index 4:");
        System.out.println(driver.move(97, 4, false) + ": This means that one of the indices doesn't conatain a sheet (97).");
        
        System.out.println("\nWe can try this with the overloaded version of move too:");
        System.out.println(driver.move("Immortality", "Title Sheet", true));
        
        System.out.println("We can remove sheets too:");
        System.out.println(driver.remove("Sheet7"));
        driver.display();
        
        System.out.println("\nBut if we try to remove a sheet that doesn't exist, an error is returned:");
        System.out.println(driver.remove(827));
        
        System.out.println("\nWhat if you forget the name/position of a sheet?");
        System.out.println(driver.sheetName(7));
        System.out.println(driver.index("Sheet10"));
        
        System.out.println("\nNow let's move \"Sheet4\" to the end of the list");
        System.out.println(driver.moveToEnd("Sheet4"));
        driver.display();
        
        System.out.println("\nNow let's move the sheet at index 1 to the end of the list");
        System.out.println(driver.moveToEnd(1));
        driver.display();
        
        System.out.println("\nHow many sheets currently exist?");
        System.out.println(driver.length());
    }
}
